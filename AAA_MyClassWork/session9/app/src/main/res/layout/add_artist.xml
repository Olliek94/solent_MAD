<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--Write an Android app containing an EditText, a -->
    <!--"Download" button and a -->
    <!--TextView below which occupies the rest of the Activity.-->
    <EditText
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:textSize="8pt"
        android:hint="@string/artistPrompt"
        />

    <EditText
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:textSize="8pt"
        android:hint="@string/songPrompt"
        />

    <EditText
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:textSize="8pt"
        android:hint="@string/datePrompt"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addSong"
        android:id="@+id/btnAddSong" />

</LinearLayout>
